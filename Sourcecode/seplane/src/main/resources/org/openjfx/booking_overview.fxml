<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BookingOverviewController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="flTable" VBox.vgrow="ALWAYS">
              <columns>
                  <TableColumn fx:id="idCol" prefWidth="20.0" text="ID" />
                  <TableColumn fx:id="startCol" minWidth="60.0" prefWidth="-1.0" text="Start" />
                  <TableColumn fx:id="zielCol" minWidth="60.0" prefWidth="-1.0" text="Ziel" />
                  <TableColumn fx:id="entfCol" minWidth="60.0" prefWidth="-1.0" text="Entfernung" />
                  <TableColumn fx:id="flugzeugCol" minWidth="60.0" prefWidth="-1.0" text="Flugzeug" />
                  <TableColumn fx:id="zeitCol" minWidth="60.0" prefWidth="-1.0" text="Zeit" />
                  <TableColumn fx:id="sitzCol" minWidth="60.0" prefWidth="-1.0" text="Sitzplatz" />
                  <TableColumn fx:id="preiseCol" minWidth="60.0" prefWidth="-1.0" text="Preise" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
